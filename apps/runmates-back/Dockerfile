#
# Build the docker image with `npx nx docker-build runmates-back`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t runmates-back`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000
ENV NODE_ENV=production

WORKDIR /app

RUN addgroup --system runmates-back && \
    adduser --system -G runmates-back runmates-back

# Install pnpm globally
RUN corepack enable && corepack prepare pnpm@latest --activate

COPY dist/apps/runmates-back runmates-back/
RUN chown -R runmates-back:runmates-back .

# You can remove this install step if you build with `--bundle` option.
RUN pnpm --prefix runmates-back install --prod

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=3s \
  CMD wget -q --spider http://localhost:3000/ || exit 1

USER runmates-back

CMD ["node", "runmates-back/main.js"]
